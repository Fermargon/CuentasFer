            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/imgbuotros" />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/zoFijo2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/background_dark"
        android:orientation="horizontal">

    </LinearLayout>


    <LinearLayout
        android:id="@+id/zoLitDesAdicional"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/etTipoDescrip"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|center_vertical|center"
            android:gravity="left|center"
            android:text=""
            android:textAlignment="gravity"
            android:background="@color/colorPrimaryDark"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/zoBotGrabar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buGrabar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|center_vertical|center"
            android:layout_weight="1"
            android:textSize="22sp"
            android:textStyle="bold"
            android:text="Grabar" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/zoDesAdicional"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edtDesAdicional"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|center_vertical|center"
            android:layout_weight="5"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@android:color/background_light"
            android:backgroundTint="@android:color/background_light"
            android:hint="Descripción adicional"
            android:inputType="textPersonName"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="visible" />


        <TextView
            android:id="@+id/etSeparador"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|center_vertical|center"
            android:background="@android:color/black"
            android:gravity="left"
            android:text=""
            android:textAlignment="gravity"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/edtImporte"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|center_vertical|center"
            android:layout_weight="2.2"
            android:background="@android:color/background_light"
            android:backgroundTint="@android:color/background_light"
            android:hint="€€€"
            android:inputType="number"
            android:text=""
            android:textAlignment="center"
            android:textSize="28sp"
            android:textStyle="bold"/>

