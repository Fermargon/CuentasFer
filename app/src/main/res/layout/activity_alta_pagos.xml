        <ImageButton
            android:id="@+id/buBoda"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/imgbuboda" />

        <ImageButton
            android:id="@+id/buOtrosRegalos"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/imgbuotros" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/zoBotSecPrestar"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:visibility="invisible">

        <ImageButton
            android:id="@+id/buPrestarCompras"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/imgbucompras" />

        <ImageButton
            android:id="@+id/buPrestarAmigos"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/imgbutaller" />

        <ImageButton
            android:id="@+id/buPrestarFinCuentas"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/imgbufincuentas" />

        <ImageButton
            android:id="@+id/buOtrosPrestar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/imgbuotros" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/zoBotSecCoche"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:visibility="invisible">

        <ImageButton
            android:id="@+id/buItv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/imgbuitv" />

        <ImageButton
            android:id="@+id/buTaller"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/imgbutaller" />

        <ImageButton
            android:id="@+id/buOtrosCoche"
