        <ImageButton
            android:id="@+id/buElectrodomesticos"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/imgbuelectro" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/zoBotSecRegalos"
        android:layout_width="match_parent"
