            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/imgbuotros" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/zoBotSecGastosMensuales"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:visibility="invisible">

        <ImageButton
            android:id="@+id/buGasto1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/imgbuitv" />

        <ImageButton
            android:id="@+id/buGasto2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/imgbutaller" />

